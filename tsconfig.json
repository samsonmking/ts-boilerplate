{
    "compilerOptions": {
        "outDir": "dist",
        "module": "Node16",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "rootDir": "."
    },
    "include": ["src/**/*.ts", "test/**/*.spec.ts"],
    "exclude": ["node_modules", "dist"]
}
